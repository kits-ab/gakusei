<config xmlns='http://www.ehcache.org/v3'
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:jsr107="http://www.ehcache.org/v3/jsr107"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd
							http://www.ehcache.org/v3/jsr107 http://www.ehcache.org/schema/ehcache-107-ext-3.0.xsd">
    <cache alias="lessons">
        <expiry>
            <ttl unit="seconds">1800</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
        <jsr107:mbeans enable-management="true" enable-statistics="true"/>
    </cache>

    <cache alias="kanjilessons">
        <expiry>
            <ttl unit="seconds">1800</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
        <jsr107:mbeans enable-management="true" enable-statistics="true"/>
    </cache>

    <cache alias="lessons.numbers">
        <expiry>
            <ttl unit="seconds">1800</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
        <jsr107:mbeans enable-management="true" enable-statistics="true"/>
    </cache>

    <cache alias="lessons.retention.correct">
        <expiry>
            <ttl unit="seconds">1800</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
        <jsr107:mbeans enable-management="true" enable-statistics="true"/>
    </cache>

    <cache alias="lessons.retention.unanswered">
        <expiry>
            <ttl unit="seconds">1800</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
        <jsr107:mbeans enable-management="true" enable-statistics="true"/>
    </cache>

    <cache alias="lessons.retention.retention">
        <expiry>
            <ttl unit="seconds">1800</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
        <jsr107:mbeans enable-management="true" enable-statistics="true"/>
    </cache>

</config>
